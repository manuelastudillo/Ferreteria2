<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Productos</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Producto',nuevo_producto_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @productos.each do |producto|%>
        <tr>
          <td><%= producto.nombre%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', producto %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_producto_path(producto) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',producto , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <p><%= link_to "Imprimir Productos" , productos_path(@producto, format: "pdf" ) %></p>
   
  <%= will_paginate @productos, renderer: BootstrapPagination::Rails %>
</section>