<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for @categoria, url: categorias_path, html: { method: :post } do |f| %>
        <% if @categoria.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@categoria.errors.count, "Errores") %> prohibido guardar esta categoria:</h4>

            <ul>
            <% @categoria.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
       
       <div class="row" style="margin-top: 30px;">
      <div class="form-group" >
        <%= f.label :nombre,"Nombre:", :class =>"col-md-2" %>
        <div class="col-md-10"style="margin-bottom: 10px;">
        <%= f.text_field :nombre, placeholder: "Ingrese Nombre De La Categoria" , :class =>"col-md-8" %>

     
     </div>
     </div>
     
      <div class="form-group" >
        <%= f.label :abreviacion ," Abreviacion:", :class =>"col-md-2" %>
        <div class="col-md-10" style="margin-bottom: 10px;">

        <%= f.text_field :abreviacion,  placeholder: "Ingrese Nombre Abrebiado De Categoria"  , :class =>"col-md-8"%>

      </div>

      </div>
      <!--
        <div class="form-group">
        <%= f.label :estado ,"Estado ", :class =>"col-md-2"%>
         <div class="col-md-10">
        <%= f.check_box :estado ,checked:"checked" %>
      </div>
      </div>
  -->
     <div class="form-group" >
        <%= f.label :descripcion ,"Descrición:", :class =>"col-md-2"  %>
        <div class="col-md-10" style="margin-bottom: 10px;">
    
        <%= f.text_area :descripcion,  placeholder: "Ingrese Descripción De Categoria" , :class =>"col-md-8"%>
      </div>
      </div>
     
      
    

      <div class="form-group botones2">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
            </div>

    <% end %>
    </div>
  </div>
</section>
