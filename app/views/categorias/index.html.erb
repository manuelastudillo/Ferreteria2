<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Categorias</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Categoria',nuevo_categoria_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @categorias.each do |categoria|%>
        <tr>
          <td><%= categoria.nombre.to_s%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', categoria_path(categoria) %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_categoria_path(categoria) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',{ action: :eliminar, id: categoria.id} , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
    <p><%= link_to "Imprimir Categorias" , categorias_path(@categorias, format: "pdf" ) %></p>
  <%= will_paginate @categorias, renderer: BootstrapPagination::Rails %>
</section>
