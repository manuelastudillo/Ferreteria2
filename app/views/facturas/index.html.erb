<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Listing <small>facturas</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">facturas</li>
    </ol>    
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_factura_path(@factura), :class => 'btn btn-success' do %>
              <span class="glyphicon glyphicon-plus"></span>
              New Factura
            <% end %>          
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
              <th>Nombre</th>
              <th>Fecha</th>
              <th>Numero</th>
              <th>Monto</th>
              <th>Cantidad</th>
              <th>Total</th>
              <th>Text</th>
                            <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= content_tag_for(:tr, @facturas) do |factura| %>
              <td><%= factura.nombre %></td>
              <td><%= factura.fecha %></td>
              <td><%= factura.numero %></td>
              <td><%= factura.monto %></td>
              <td><%= factura.cantidad %></td>
              <td><%= factura.total %></td>
              <td><%= factura.text %></td>
                            <td><%= link_to 'Show', factura %></td>
                <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
                <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

