<% content_for :content_header  do %>
  <section class="content-header">
    <h1>Show <small>factura</small></h1>

    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
      <li><%= link_to "Facturas", facturas_path %></li>
      <li class="active">Show</li>
    </ol>
  </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_factura_path(@factura), :class => 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>          
          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd><%= @factura.nombre %></dd>

            <dt>Fecha:</dt>
            <dd><%= @factura.fecha %></dd>

            <dt>Numero:</dt>
            <dd><%= @factura.numero %></dd>

            <dt>Monto:</dt>
            <dd><%= @factura.monto %></dd>

            <dt>Cantidad:</dt>
            <dd><%= @factura.cantidad %></dd>

            <dt>Total:</dt>
            <dd><%= @factura.total %></dd>

            <dt>Text:</dt>
            <dd><%= @factura.text %></dd>
 
<strong>Tareas:</strong>
  <p>
    <% @factura.tareas.each do |tarea| %>
      Nombre: <%= tarea.nombre %><br/>
      productos: <%= tarea.productos.map(&:nombre).to_sentence %>
      <hr/>
    <% end %>
  </p>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

