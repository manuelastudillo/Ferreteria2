<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Clientes</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Cliente',nuevo_cliente_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @clientes.each do |cliente|%>
        <tr>
          <td><%= cliente.nombre%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', cliente %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_cliente_path(cliente) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',cliente , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
      <p><%= link_to "Imprimir Clientes" , clientes_path(@clientes, format: "pdf" ) %></p>

  <%= will_paginate @clientes, renderer: BootstrapPagination::Rails %>
</section>