<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@cliente, :html => { :role => "form" }) do |f| %>
        <% if @cliente.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@cliente.errors.count, "error") %> prohibido guardar este cliente:</h4>

            <ul>
            <% @cliente.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

       <div class="row" style="margin-top: 30px;">
      <div class="form-group" >
        <%= f.label :nombre,"Nombre:", :class =>"col-md-2" %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_field :nombre, placeholder: "Ingrese Nombre Del cliente", :class =>"col-md-8"  %>
     </div> 
     </div> 

     
      
     
     
      <div class="form-group">
        <%= f.label :rut,"Rut:", :class => "col-md-2"%>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_field :rut, placeholder:"Ingrese los primeros 8 numeros sin puntos y sin codigo verificador ", :class =>"col-md-8" %>
      </div>
      </div>

  

      <div class="form-group" >
        <%= f.label :domicilio,"Domicilio:", :class => "col-md-2" %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_field :domicilio , placeholder:"Domicilio Del cliente", :class =>"col-md-8"%>
      </div>
      </div>

      <div class="field">
        <%= f.label :comuna,"Comuna:", :class => "col-md-2" %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.select('comuna_id', Comuna.all.collect{|d| [d.nombre, d.id]}, class: 'chosen-select') %>
      </div>
      </div>

      

      <div class="form-group">
        <%= f.label :telefono1, "Teléfono:", :class => "col-md-2" %>
                <div class="col-md-10" style="margin-bottom: 10px;">
      <%= f.text_field :telefono1 , placeholder:"Teléfono Del cliente", :class =>"col-md-8"%>
      </div>
      </div>

      
       


      <div class="form-group">
        <%= f.label :email, "Email:", :class => "col-md-2"  %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_field :email ,placeholder:"Email Del cliente", :class =>"col-md-8"%>
      </div>
      </div>

 



      <div class="form-group botones2">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
        </div>
    <% end %>
    </div>
  </div>
</section>
