<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Proveedores</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Proveedor',nuevo_proveedor_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @proveedors.each do |proveedor|%>
        <tr>
          <td><%= proveedor.nombre%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', proveedor %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_proveedor_path(proveedor) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',proveedor , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
    <p><%= link_to "Imprimir Proveedores" , proveedors_path(@proveedor, format: "pdf" ) %></p>
  <%= will_paginate @proveedors, renderer: BootstrapPagination::Rails %>
</section>