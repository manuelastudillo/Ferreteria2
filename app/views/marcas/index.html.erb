<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Marcas</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Marca',nuevo_marca_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @marcas.each do |marca|%>
        <tr>
          <td><%= marca.nombre.to_s%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', marca_path(marca) %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_marca_path(marca) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',{ action: :eliminar, id: marca.id} , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <p><%= link_to "Imprimir Marca" , marcas_path(@marca, format: "pdf" ) %></p>
  <%= will_paginate @marcas, renderer: BootstrapPagination::Rails %>
</section>
