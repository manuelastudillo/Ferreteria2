<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@marca, :html => { :role => "form" }) do |f| %>
        <% if @marca.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h4><%= pluralize(@marca.errors.count, "errores") %> prohibido guardar este marca:</h4>

            <ul>
            <% @marca.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <div class="row" style="margin-top: 30px;">
      <div class="form-group">
        <%= f.label :nombre,"Nombre:", :class =>"col-md-2" %>
        <div class="col-md-10"  style="margin-bottom: 10px;">
        <%= f.text_field :nombre, placeholder: "Ingrese Nombre De la Marca" , :class =>"col-md-8" %>
     </div> 
     </div> 
      <div class="form-group" >
        <%= f.label :abreviacion ,"Abreviacion:", :class =>"col-md-2" %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_field :abreviacion,  placeholder: "Ingrese Nombre Abreviado De La Marca" , :class =>"col-md-8" %>
      </div>
      </div>
      


      <div class="form-group" >
        <%= f.label :descripcion, "Descripción:", :class =>"col-md-2"  %>
        <div class="col-md-10" style="margin-bottom: 10px;">
        <%= f.text_area :descripcion ,placeholder:"Descripción De La Marca" , :class =>"col-md-8"%>
      </div>
      </div>


      <div class="form-group botones2">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
     
    <% end %>
    </div>
  </div>
</section>
