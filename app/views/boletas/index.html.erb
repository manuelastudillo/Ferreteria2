<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Boletas</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Boleta',nuevo_boleta_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
    </thead>
    <tbody>
    <% @boletas.each do |boleta|%>
        <tr>
          <td><%= boleta.id.to_s%> </td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', boleta_path(boleta) %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_boleta_path(boleta) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',{ action: :eliminar, id: boleta.id} , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
    <p><%= link_to "Imprimir boletas" , boletas_path(@boletas, format: "pdf" ) %></p>
  <%= will_paginate @boletas, renderer: BootstrapPagination::Rails %>
</section>
